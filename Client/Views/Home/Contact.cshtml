@{
	ViewData["Title"] = "Contact";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PFood.Data.Feedback;

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Get 24/7 Support</p>
					<h1>Contact us</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->
<!-- contact form -->
<div class="contact-from-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 mb-5 mb-lg-0">
				<div class="form-title">
					<h2>Have you any question?</h2>
					<p>Please give us a review so we can bring you the best products!</p>
				</div>
				<div id="form_status"></div>
				<div class="contact-form">
					<form asp-action="Contact" method="post">
						<p>
							<span asp-validation-for="Name" class="text-danger"></span>
							<input asp-for="Name" type="text" placeholder="Name" name="name" id="name">
							<span asp-validation-for="Email" class="text-danger"></span>
							<input asp-for="Email" type="email" placeholder="Email" name="email" id="email">
						</p>
						<p>
							<span asp-validation-for="Phone" class="text-danger"></span>
							<input asp-for="Phone" type="tel" placeholder="Phone" name="phone" id="phone">
							<span asp-validation-for="Subject" class="text-danger"></span>
							<input asp-for="Subject" type="text" placeholder="Subject" name="subject" id="subject">
						</p>
						<p>
							<span asp-validation-for="Message" class="text-danger"></span>
							<textarea asp-for="Message" cols="30" rows="10" placeholder="Message"></textarea>
						</p>
						<p><input type="submit" value="Submit"></p>
					</form>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="contact-form-wrap">
					<div class="contact-form-box">
						<h4><i class="fas fa-map"></i> Restaurant Address</h4>
						<p>123 Quang Trung Street, <br> Go Vap Distrist, <br>Ho Chi Minh City</p>
					</div>
					<div class="contact-form-box">
						<h4><i class="far fa-clock"></i> Restaurant Hours</h4>
						<p>MON - FRIDAY: 8 to 9 PM <br> SAT - SUN: 10 to 8 PM </p>
					</div>
					<div class="contact-form-box">
						<h4><i class="fas fa-address-book"></i> Contact</h4>
						<p>Phone: +0898827656 <br> Email: support@thanhphuc.com</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end contact form -->
