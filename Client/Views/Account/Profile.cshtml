@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PFood.Models.UserVM

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>"Fast - Delicious - Convenient!"</p>
                    <h1>Profile</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->

@if(Model != null)
{
    <div class="profile-header text-center">
        <img src="~/assets//img/profile/@Model.Avartar" alt="User Photo" class="profile-img border shadow-sm">
        <h1 class="mt-3">@Model.Fullname</h1>
        <h3 class="text-white fw-bold">@Model.Role</h3>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="profile-card bg-white rounded shadow-sm p-4">
                    <div class="profile-info text-center" style="margin-top: 60px">
                        <h3>Personal Information</h3>
                        <p><strong>Email: </strong>@Model.Email</p>
                        <p><strong>Phone: </strong>@Model.PhoneNumber</p>
                        <p><strong>Address: </strong>@Model.Address</p>
                        @if(Model.DOB != null)
                        {
                            <p><strong>Date of Birth: </strong>@(Model.DOB.Value.ToString("dd/MM/yyyy") ?? "")</p>
                        }
                        <p><strong>Joined Day: </strong> @Model?.JoinedDate</p>
                    </div>
                    <hr>

                    <div class="profile-social mt-4 text-center">
                        <a asp-action="Edit" asp-controller="Account" asp-route-id="@Model.Id" class="btn btn-primary mx-2">Edit Profile</a>
                        <a asp-action="Logout" asp-controller="Account" class="btn btn-danger mx-2">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .profile-header {
        background: linear-gradient(90deg, #4b6cb7 0%, #182848 100%);
        color: white;
        padding: 2rem 0;
        position: relative;
    }

    .profile-img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        cursor: pointer;
        border: 5px solid white;
    }

    .profile-header h1 {
        font-size: 2rem;
        margin-top: 1rem;
    }

    .profile-header p {
        font-size: 1rem;
        margin-bottom: 0;
    }

    .profile-card {
        margin-top: -75px;
        padding: 2rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        border-radius: 0.5rem;
        background: #ffffff;
    }

    .profile-info h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .profile-info p {
        font-size: 1rem;
        margin-bottom: 0.5rem;
        color: #555;
    }

    .profile-bio {
        margin-top: 1.5rem;
    }

        .profile-bio h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #333;
        }

        .profile-bio p {
            font-size: 1rem;
            color: #555;
        }

    .profile-social .btn {
        margin: 0.5rem 0.5rem 0;
    }

    .btn-primary {
        background-color: #4b6cb7;
        border-color: #4b6cb7;
    }

    .btn-info {
        background-color: #182848;
        border-color: #182848;
    }

        .btn-primary:hover,
        .btn-info:hover {
            opacity: 0.8;
        }
</style>
