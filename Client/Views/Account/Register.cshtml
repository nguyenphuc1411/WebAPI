@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PFood.Models.RegisterVM;

<div class="hero-area background">
    <div class="container ">
        <div class="row">
            <div class="col-lg-4 mx-auto">
                <div class="hero-text">
                    <div class="hero-text-tablecell">
                        <p class="subtitle">Welcome to Phuc Food</p>
                        <h3 class="text-white">Register Form</h3>
                        <form asp-action="Register">   
                            <div class="form-group mt-3">
                                <label class="text-white fw-bold" asp-for="Fullname"></label>
                                <input asp-for="Fullname" class="form-control" />
                                <span class="text-danger" asp-validation-for="Fullname"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label class="text-white fw-bold" asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label class="text-white fw-bold" asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                             <div class="form-group mt-3">
                                <label class="text-white fw-bold" asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>                         

                            <div class="hero-btns">
                                <input type="submit" class="boxed-btn" value="Register" />
                                <a asp-controller="Account" asp-action="Login" class="bordered-btn ms-5">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

