
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ResetPassword

<div class="hero-area background">
    <div class="container ">
        <div class="row">
            <div class="col-lg-4 mx-auto">
                <div class="hero-text">
                    <div class="hero-text-tablecell">
                        <p class="subtitle">Reset Password</p>                     
                        <form asp-action="ResetPassword" method="post">
                            <div>
                                <label class="text-white fw-bold" for="newPassword">Confirmation Code:</label>
                                <input type="text" name="code" max="6" class="form-control mt-2" placeholder="Example: 123456..." />
                                <div class="mt-3">
                                    <label class="text-white fw-bold" for="newPassword">New Password:</label>
                                    <input type="password" asp-for="Password" class="form-control mt-2" placeholder="New Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                
                                <div class="mt-3">
                                    <label class="text-white fw-bold" for="newPassword">Confirm Password:</label>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control mt-2" placeholder="Confirm Password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                               
                            </div>
                            <button class="btn btn-primary mt-3" type="submit">Reset Password</button>
                        </form> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

